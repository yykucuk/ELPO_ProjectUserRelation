@{
}


@model string;
@if (string.IsNullOrEmpty(Model))
{
    <h3 style="color:red">@Model</h3>
}
<form action="@Url.Action("AddProject","Project")" method="post" enctype="multipart/form-data" >
  <div class="form-group">
    <label>Project Name</label>
    <input type="text" name="name" class="form-control" placeholder="Project Name">
  </div>
  <div class="form-group">
    <label>Project Icon</label>
    <input type="file" name="icon" class="form-control">
  </div>
  <div class="form-group">
    <label>Description</label>
    <input type="text" name="description" class="form-control">
    <div>
        <textarea asp-for="description" class="form-control"></textarea>
        <span asp-validation-for="description" class="text-danger"></span>
      </div>
  </div>
  <div class="form-group">
    <label>Progress</label>
    <input type="number" name="progress" class="form-control">
  </div>
  <Br/>
  <button type="submit" class="btn btn-primary">Proje Ekle</button>
</form>

@section Scripts{
    <script>
        tinymce.init({
            selector: 'textarea#description'
        });
    </script>
}
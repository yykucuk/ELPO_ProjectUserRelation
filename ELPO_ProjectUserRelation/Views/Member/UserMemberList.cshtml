@{
}
@model List<User>

    <table class="table">
  <thead>
    <tr>
      <th scope="col">User</th>
      <th scope="col">Team Role</th>
      <th scope="col">Project</th>
      <th scope="col">LastOnline</th>
    </tr>
  </thead>
  <tbody>
      @foreach (User user in Model)
        {
            foreach (ProjectUserRelation pur in user.ProjectUserRelations)
            {
                <tr>
                  <td><img style="width:40px;height:40px;border-radius: 50%;" src="~/img/@user.ProfileImageUrl"/>@user.Name</td>
                  <td style="color:@user.Role.Color">@user.Role.Name</td>
                  <td>@pur.Project.Name</td>
                  <td>@user.LastOnline</td>
                </tr>
            }
        }
  </tbody>
</table>